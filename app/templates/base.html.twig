<!DOCTYPE html>
<html lang="{{ pageLanguage|default('en') }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}Recipes{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="{{ body_classes|default('') }} {{ body_classes_additional|default('') }}">
        <nav class="navbar navbar-light bg-green shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Recipes</a>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNavDropdown">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link bi bi-person text-dark font-weight-bold" href="#">Profil</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link bi bi-door-open text-dark font-weight-bold" href="{{ path('app_logout') }}">logout</a>
                                </li>
                                {% if is_granted('ROLE_ADMIN')%}
                                    <li class="nav-item">
                                        <a class="nav-link bi bi-person-square text-dark font-weight-bold" href="{{ path('app_user_list') }}">Users</a>
                                    </li>
                                {% endif %}
                            </ul>
                        </div>
                {% else %}
                    <a class="bi bi-door-closed text-dark font-weight-bold float-right bi-" href="{{ path('app_login') }}">login</a>
                {% endif %}
            </div>
        </nav>
        <div class="p-2 mt-2 main-container">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>