<!DOCTYPE html>
<html lang="{{ pageLanguage|default('en') }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}Recipes{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="{{ body_classes|default('') }} {{ body_classes_additional|default('') }}">
        <nav class="navbar navbar-expand-lg navbar-light bg-green shadow-sm">
            <span class="ml-auto mr-1">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark bi bi-list font-weight-bold" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false" style="font-size: 2rem">
                        </a>
                        <ul class="dropdown-menu dropdown-menu-right mt-2" aria-labelledby="navbarDropdown">
                            <li>
                                <a class="dropdown-item bi bi-person text-dark font-weight-bold" href="#">Profil</a>
                            </li>
                            <li>
                                <a class="dropdown-item bi bi-door-open text-dark font-weight-bold" href="{{ path('app_logout') }}">logout</a>
                            </li>
                            {% if is_granted('ROLE_ADMIN')%}
                                <li>
                                    <a class="dropdown-item bi bi-person-square text-dark font-weight-bold" href="{{ path('app_user_list') }}">Users</a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                {% else %}
                    <a class="bi bi-door-closed text-dark font-weight-bold float-right bi-" href="{{ path('app_login') }}">login</a>
                {% endif %}
            </span>
        </nav>
        <div class="p-2 mt-2 main-container">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>