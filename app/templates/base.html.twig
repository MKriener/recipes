<!DOCTYPE html>
<html lang="{{ pageLanguage|default('en') }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}Recipes{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="{{ body_classes|default('') }} {{ body_classes_additional|default('') }}">
        <nav class="navbar navbar-expand-lg navbar-light bg-green shadow-sm">
        </nav>
        <div class="p-2 mt-2 main-container">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>